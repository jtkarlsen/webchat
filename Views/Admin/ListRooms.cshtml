@model IEnumerable<WebChat.Models.Chatroom>

@{
    ViewBag.Title = "Meldinger";
}

<h2>Chatroom</h2>

<table>
    <tr>
        <th>
            Offentlig
        </th>
        <th>
            Navn
        </th>
        <th>
            Maks antall brukere
        </th>
        <th>
            Dato
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IsPublic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaximumUsers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Endre", "EditChatrooms", new { id=item.Id }) |
            @Html.ActionLink("Detaljer", "DetailsRooms", new { id = item.Id }) |
            @Html.ActionLink("Slett", "DeleteChatrooms", new { id = item.Id })
        </td>
    </tr>
}

</table>
<div>
    @Html.ActionLink("Tilbake", "Index")
</div>